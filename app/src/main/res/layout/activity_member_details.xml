<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberDetailsActivity">

    <TextView
        android:id="@+id/textCPDetailHeader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:paddingLeft="20dp"
        android:background="#fae596"
        android:gravity="fill_vertical"
        android:text="Add New Member Details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout

        android:id="@+id/tableLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:stretchColumns="1,2,3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCPDetailHeader"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF">


            <EditText
                android:id="@+id/editTextMemberCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:ems="10"
                android:hint="Member Code"
                android:inputType="textPersonName" />

            <Spinner
                android:id="@+id/spinnerCollectionDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:hint="Collection Day"
                android:spinnerMode="dialog" />


            <Spinner
                android:id="@+id/spinnerCollectionPointName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:hint="Collection Point Name"
                android:spinnerMode="dialog" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_span="1"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextMiddleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_span="1"
                android:ems="10"
                android:hint="Middle Name"
                android:inputType="textPersonName"
                tools:ignore="DuplicateIds" />

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_span="1"
                android:ems="10"
                android:hint="Middle Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextGurdainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_span="1"
                android:ems="10"
                android:hint="Gurdain Name"
                android:inputType="textPersonName"
                tools:ignore="DuplicateIds" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF">


            <EditText
                android:id="@+id/editTextBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Date of Birth"
                android:layout_column="0"
                android:inputType="date"
                tools:layout_editor_absoluteX="98dp"
                tools:layout_editor_absoluteY="511dp" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:hint="Gender"
                android:spinnerMode="dialog" />

            <EditText
                android:id="@+id/editTextAdhar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:ems="10"
                android:hint="Adhar No"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:ems="10"
                android:hint="Mobile No"
                android:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <EditText
                android:id="@+id/editTextHouseNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:ems="10"
                android:hint="House No"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextStreetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:ems="10"
                android:hint="Street Name"
                android:inputType="textPersonName" />

            <Spinner
                android:id="@+id/spinnerCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:hint="Country"
                android:spinnerMode="dialog" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF">


            <Spinner
                android:id="@+id/spinnerState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:hint="State"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/spinnerDistricts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:hint="District"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/spinnerPolice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:hint="Police Station"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/spinnerMunicipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:hint="Municipality Name"
                android:spinnerMode="dialog" />

        </TableRow>


        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF">


            <Spinner
                android:id="@+id/spinnerWards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:hint="Ward Name"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/spinnerBlocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:hint="Block"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/spinnerPanchayets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:hint="Gram Panchayet"
                android:spinnerMode="dialog" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF">


            <Spinner
                android:id="@+id/spinnerVillages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:hint="Village"
                android:spinnerMode="dialog" />

            <EditText
                android:id="@+id/editTextPostOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:ems="10"
                android:hint="Post Office"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextWard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:ems="10"
                android:hint="Ward No"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextPincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:ems="10"
                android:hint="Pincode"
                android:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF">


            <Spinner
                android:id="@+id/spinnerVisitStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:hint="Visit Status"
                android:spinnerMode="dialog" />

            <EditText
                android:id="@+id/editTextRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:ems="10"
                android:hint="Remarks"
                android:inputType="textPersonName" />


        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="162dp"
        android:layout_height="35dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="16dp"
        android:text="save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toTopOf="@+id/tableLayout2" />

</android.support.constraint.ConstraintLayout>