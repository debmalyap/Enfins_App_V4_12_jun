<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1,2,3,4,5,6,7">



        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/textMemberCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:padding="10dp"
                android:text="TextView"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textMemberName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:padding="10dp"
                android:text="TextView"/>

            <TextView
                android:id="@+id/textMemberAadhar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:padding="10dp"
                android:inputType="number"
                android:text="TextView"/>
            <TextView
                android:id="@+id/textMemberDOB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:padding="10dp"
                android:text="TextView"/>
            <TextView
                android:id="@+id/textMemberGuardianName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:padding="10dp"
                android:text="TextView"/>
            <TextView
                android:id="@+id/textMemberCollectionPoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:padding="10dp"
                android:text="TextView"/>
            <TextView
                android:id="@+id/textMemberVisitStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="7"
                android:padding="10dp"
                android:text="TextView" />

            <!--Developed By Debmalya-->
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/elgCheck"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:layout_column="7"
                app:srcCompat="@drawable/ic_menu_send"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="160dp" />


            <!--Ended By Debmalya-->

        </TableRow>

        <TableRow
            android:layout_height="1px"
            android:background="#00FF00">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_span="2"
                android:text=""></TextView>
        </TableRow>

    </TableLayout>



